@{
    Layout = "_LayoutGeneral";
}




<div>
    <h2>
        Crear Usuario
    </h2>
    <h3>Tipo usuario</h3>
    <h4>Administrador</h4>
    <input id="admin" type="checkbox"></input>
    <h4>Tecnico</h4>
    <input id="tec" type="checkbox"></input>
    <div>
        <form asp-action="CrearUsuario" method="post">
            <h3>Nombre Usuario</h3>
            <input name="nombre"></input>
            <h3>Correo Usuario</h3>
            <input name="correo"></input>
            <h3>Contraseña Usuario</h3>
            <input name="pwd"></input>
            <input id="userType" name="tipo" type="hidden"></input>
            <button type="submit">Crear</button>
        </form>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        var valoradm = document.getElementById('admin');
        var valortec = document.getElementById('tec');
        var userTypeInput = document.getElementById('userType');

        function updateUserType() {
            if (valoradm.checked) {
                userTypeInput.value = 1;
            } else if (valortec.checked) {
                userTypeInput.value = 2;
            } else {
                userTypeInput.value = '';
            }
        }

        valoradm.addEventListener('change', function () {
            if (valoradm.checked) {
                valortec.checked = false; // Desmarcar 'tec' si 'admin' está marcado
            }
            updateUserType();
        });

        valortec.addEventListener('change', function () {
            if (valortec.checked) {
                valoradm.checked = false; // Desmarcar 'admin' si 'tec' está marcado
            }
            updateUserType();
        });

        updateUserType(); // Inicializar el valor al cargar la página
    });
</script>
