@{
    Layout = "_LayoutGeneral";
}

<link rel="stylesheet" href="~/css/TicketTecnico/examinar.css" asp-append-version="true" />

@model Ticket

<div class="container">
    <div class="ticket-container">
        <div class="title">Información del Ticket</div>
        <div class="ticket-info">
            <div class="info-label">Id Ticket:</div>
            <div class="info-value">@Model.IdTicket</div>

            <div class="info-label">Estado:</div>
            <div class="info-value">@ViewBag.estado</div>

            <div class="info-label">Prioridad:</div>
            <div class="info-value">@Model.IdPrioridad</div>

            <div class="info-label">Bloqueado:</div>
            <div class="info-value">@Model.Bloqueado</div>

            <div class="info-label">Descripción:</div>
            <div class="info-value"><textarea readonly>@Model.Descripcion</textarea></div>
        </div>
    </div>
</div>
